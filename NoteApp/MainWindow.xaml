<Window x:Class="NoteApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteApp"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="700" ResizeMode="CanResizeWithGrip" AllowsTransparency="True" WindowStyle="None" Background="{x:Null}" MouseLeftButtonDown="Drag" >
    <Border CornerRadius="5" Background="Black" BorderBrush="Gray" BorderThickness="0.3">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="7*"></RowDefinition>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="0.5*"></ColumnDefinition>
                <ColumnDefinition Width="4*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" >
                <Image Source="/Assets/wolf.jpg" Height="50" Width="45" Stretch="Fill"/>
            </StackPanel>
            
            <Ellipse Fill="Red" Grid.Row="0" Grid.Column="3" Height="15" Width="15" HorizontalAlignment="Right"
                VerticalAlignment="Top" Margin="0,10,10,0" MouseLeftButtonDown="CloseApp" Cursor="Hand"></Ellipse>
            <Ellipse Fill="Orange" Grid.Row="0" Grid.Column="3" Height="15" Width="15" HorizontalAlignment="Right"
                VerticalAlignment="Top" Margin="0,10,50,0" MouseLeftButtonDown="MinimizeApp" Cursor="Hand"></Ellipse>
            <Ellipse Fill="LimeGreen" Grid.Row="0" Grid.Column="3" Height="15" Width="15" HorizontalAlignment="Right"
                VerticalAlignment="Top" Margin="0,10,30,0" MouseLeftButtonDown="MaximizeApp" Cursor="Hand"></Ellipse>

            <DockPanel x:Name="DockHere"  Grid.Row="1" Grid.Column="3">
                <RichTextBox  x:Name="yes"  Grid.Row="1" Grid.Column="2" BorderThickness="0, 0.4, 0, 0" Background="Black" BorderBrush="Gray" AcceptsReturn="False"  Foreground="#7FD4C8C8" IsDocumentEnabled="True" TextChanged="TextHasChanged"/>
            </DockPanel>

            <ScrollViewer Grid.Row="1" Grid.Column="1" BorderBrush="Gray" BorderThickness="2, 2, 2, 2" >

                <StackPanel x:Name="StackHere"  ScrollViewer.VerticalScrollBarVisibility="Visible" Width="271">
                    
                </StackPanel>

            </ScrollViewer>
            

            <StackPanel  Grid.Row="1" Grid.Column="0">
                <Button Background="#FFCD0D0D"></Button>
                <Button Background="#FFA46868"></Button>
                <Button></Button>
            </StackPanel>

        </Grid>
    </Border>
</Window>
